@using FirstPro.Models

@model IEnumerable<FirstProUser>


@{
    ViewData["Title"] = "ShowAllUsers";
}




<h1>Show all users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
 
            <th></th>
        </tr>
    </thead>

    @foreach (var user in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                
           
                <td>
                    <a asp-action="ShowUserRoles" asp-route-id="@user.Id" class="btn-primary">Check roles</a>
                </td>
            </tr>
        </tbody>
    }
</table>
<p>
    <a asp-action="Index">Return to roles</a>
</p>
