@model FirstPro.ViewModels.CountryViewModel


<html>
<head>

</head>
<body>

    <div>
        <a asp-action="CreateCountry">Create</a>

    </div>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>

                <th scope="col">Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var country in @Model.countries)
            {
                <tr>

                    <th scope="row"> @country.Id</th>

                    <td>@country.Name</td>

                    <td class="text-center">
                        <a asp-action="EditCountry" asp-route-id="@country.Id">Edit</a>
                        <a asp-action="DeleteCountry" asp-route-id="@country.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>