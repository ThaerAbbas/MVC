@model FirstPro.ViewModels.PersonDetailsViewModel

<html>
    <head>




</head>
<body>
  

<form action="Search" method="post">
      <input type="text" placeholder="Search.." name="name">
      <button type="submit" class="btn btn-success">Search</button>
   
</form>

<form action="Add" method="post">
  <div>
<div class="form-group">
  <input type="text" class=" inputtext " name="Name" value="" placeholder="Name"  style="width:auto">
            </div>
                <div class="form-group">
            <input type="text" class=" inputtext " name="PhoneNumber" value="" placeholder="PhoneNumber" style="width:auto">
                </div>
                    <div class="form-group">
            <input type="text" class=" inputtext " name="CityId" value="" placeholder="CityId" style="width:auto">
                    </div>
                        <div class="form-group">
   <input class="btn btn-secondary " id="submit" type="submit" value="Add">  
   </div>
  </div>
</form>
    <div>
        <a asp-action="Create">Create</a>

    </div>

    
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>

      <th scope="col">Name</th>
      <th scope="col">PhoneNumber</th>
      <th scope="col">Country</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var person in @Model.personList){
    <tr>
         
      <th scope="row"> @person.PersonId</th>
     
      <td>@person.Name</td>
      <td>@person.PhoneNumber</td>
      <td>@person.CityId</td>
     

                    <td  class="text-center"><form action="Delete" method="post">
      <button type="button" class="btn btn-danger">Delete</button>
</form></td>
    </tr>
      }
   </tbody>
</table>
 
   
        
    
</body>
</html>