@model FirstPro.ViewModels.PersonDetailsViewModel

<html>
    <head>




</head>
<body>
  

<form action="Search" method="post">
      <input type="text" placeholder="Search.." name="name">
      <button type="submit" class="btn btn-success">Search</button>
   
</form>

<form action="Add" method="post">
  <div>
  <input type="text" class=" inputtext " name="Name" value="" placeholder="Name"  style="width:auto">
   <input type="text" class=" inputtext " name="Gender" value="" placeholder="Gender"  style="width:auto">
   <input type="text" class=" inputtext " name="Mobile" value="" placeholder="Mobile"  style="width:auto">
   <input type="text" class=" inputtext " name="Country" value="" placeholder="Country"  style="width:auto">
   <input class="btn btn-secondary " id="submit" type="submit" value="Add">   
  </div>
</form>
    
    
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Gender</th>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Mobile</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var person in Model.personList){
    <tr>
         
      <th scope="row"> @person.PersonId</th>
      <td> @person.Gender</td>
      <td>@person.Name</td>
      <td>@person.Country</td>
      <td>@person.Mobile</td>
      <td class="text-center">Delete</td>
    </tr>
      }
   </tbody>
</table>
 
   
        
    
</body>
</html>